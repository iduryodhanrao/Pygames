<CreateAccountWindow>:
    #variable used in Screen class : objectid from below layout
    name: "create"
    nam: namee
    email: email
    password: passw

    FloatLayout:
        size: root.width/4, root.height/4

        Label:
            text: 'Create an Account'
            size_hint: .8, .2
            pos_hint: {'x':.1, 'top':1}
        Label:
            text: 'Name'
            size_hint: .5, .05
            pos_hint: {'x' : 0, 'top':.8}
        TextInput:
            pos_hint: {'x' : 0.5, 'top':.8}
            size_hint: .4, .05
            multiline: False
            id: namee

        Label:
            text: 'Email'
            size_hint: .5, .05
            pos_hint:{'x':0,'top':.8 -.06}

        TextInput:
            pos_hint: {'x' : 0.5, 'top':.8-.06}
            size_hint: .4, .05
            multiline: False
            id: email

        Label:
            text: 'Password'
            size_hint: .5, .05
            pos_hint:{'x':0,'top':.8 -.06*2}

        TextInput:
            pos_hint: {'x' : 0.5, 'top':.8-.06*2}
            size_hint: .4, .05
            multiline: False
            id: passw
            password: True


    Button:
        pos_hint: {'x':.3, 'y':.25}
        size_hint: .4, .1
        font_size: 20
        text: 'Already have an Account? Log In'
        on_release:
            root.manager.transition.direction = "left"
            root.login()

    Button:
        pos_hint: {'x':.40, 'y':.15}
        size_hint: .2, .1
        font_size: 20
        text: 'Submit'
        on_release:
            root.manager.transition.direction = "left"
            root.submit()

<LoginWindow>:
    name: "login"
    email: email
    password: password

    FloatLayout:
        size: root.width/4, root.height/4
        pos_hint: {'center_x':.5, 'center_y':.5}
        Label:
            text: "Email: "
            pos_hint: {'x':.1,'top':.9}
            size_hint:.35,.05

        TextInput:
            size_hint: .4, .05
            multiline: False
            id: email
            pos_hint: {'x' : 0.5, 'top':.9}

        Label:
            text: "Password: "
            pos_hint: {'x':.1,'top':.8}
            size_hint:.35,.05

        TextInput:
            id: password
            size_hint: .4, .05
            multiline: False
            password: True
            pos_hint: {'x' : 0.5, 'top':.8}

        Button:
            pos_hint: {'x':.2, 'y':.05}
            size_hint: .6, .2
            text: 'Login'
            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()

        Button:
            pos_hint: {'x':.1, 'y':.3}
            size_hint: .8, .2
            text: "Don't have an Account? Create One"
            on_release:
                root.manager.transition.direction = "right"
                root.createBtn()

<MainWindow>:
    n:n
    email: email
    created: created

    FloatLayout:
        size: root.width/4, root.height/4
        pos_hint: {'center_x':.5, 'center_y':.5}
        Label:
            id: n
            text: "Account Name: "
            pos_hint: {'x':.1,'top':.9}
            size_hint:.8,.2

        Label:
            id: email
            text: "Email: "
            pos_hint: {'x':.1,'top':.7}
            size_hint:.8,.2

        Label:
            id: created
            text: "Created: "
            pos_hint: {'x':.1,'top':.5}
            size_hint:.8,.2

        Button:
            pos_hint: {'x':.2, 'y':.1}
            size_hint: .6, .2
            text: "Log Out"
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "down"